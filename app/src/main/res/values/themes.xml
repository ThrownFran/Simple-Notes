<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimarySurface">?attr/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background color -->
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/teal_700</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">?attr/colorSurfaceVariant</item>
        <item name="fontFamily">@font/worksan</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <item name="android:actionModeBackground">?attr/colorSecondary</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_baseline_clear_24</item>
        <item name="actionModeStyle">@style/Widget.ActionMode</item>
    </style>

    <style name="Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/Widget.ActionMode.TextStyle</item>
    </style>

    <style name="Widget.ActionMode.TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>
</resources>
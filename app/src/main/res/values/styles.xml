    <!-- Cardview   -->
    <style name="Widget.SimpleNotes.CardView" parent="Widget.Material3.CardView.Outlined">
        <item name="shapeAppearance">@style/ShapeAppearance.SimpleNotes.MediumComponent</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <style name="ShapeAppearance.SimpleNotes.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

